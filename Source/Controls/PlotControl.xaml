<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="UI_Demo.PlotControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UI_Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">

    <Grid x:Name="host">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="8">

            <TextBlock
                x:Name="tbTitle"
                FontSize="{StaticResource FontSizeMedium}"
                Foreground="{StaticResource PrimaryBrush}"
                Text="Title Here"
                TextWrapping="Wrap" />

            <!--
            <Button
                x:Name="btnPlot"
                Grid.Row="0"
                Click="btnPlotOnClick"
                Content="Draw Plot"
                Style="{StaticResource EnhancedButton}" />
            -->

        </StackPanel>

        <Canvas
            x:Name="cvsPlot"
            Grid.Row="1"
            MinWidth="600"
            MinHeight="350"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent">
            <!--  Circle plots will be drawn here  -->
            <ToolTipService.ToolTip>
                <ToolTip
                    x:Name="ttPlot"
                    Background="{StaticResource GradientToolTipBrush}"
                    BackgroundSizing="OuterBorderEdge"
                    Opacity="0.7"
                    Placement="Mouse"
                    Shadow="{ThemeResource CommandBarFlyoutOverflowShadow}"
                    Translation="0,0,32"
                    Visibility="Collapsed">
                    <StackPanel
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="5"
                        Orientation="Horizontal"
                        Spacing="6">
                        <Image
                            Width="34"
                            Height="34"
                            Source="ms-appx:///Assets/Measure1.png" />
                        <TextBlock
                            x:Name="ttValue"
                            Margin="2,0,18,0"
                            VerticalAlignment="Center"
                            FontSize="{StaticResource FontSizeMedium}"
                            FontWeight="Bold"
                            Text="N/A" />
                    </StackPanel>
                </ToolTip>
            </ToolTipService.ToolTip>
        </Canvas>
    </Grid>

</UserControl>
