<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="UI_Demo.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UI_Demo.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:UI_Demo"
    BorderBrush="{StaticResource GradientBarBrush}"
    BorderThickness="1"
    CloseButtonText=""
    CornerRadius="5"
    DefaultButton="Primary"
    PrimaryButtonText="OK"
    SecondaryButtonText=""
    mc:Ignorable="d">
    <!--
        NOTE: Absolutely DO NOT set the button styles in the ContentDialog header above.
        e.g. PrimaryButtonStyle="{ThemeResource AccentButtonStyle}", this will cause
        unhandled exceptions that will lead you to believe the issue is the XamlRoot.
        This appears to only be an issue when invoking ContentDialogs from outside
        of the MainWindow's XAML VisualTree.
        I have added a note about this under the Microsoft-UI-XAML Issues:
        https://github.com/microsoft/microsoft-ui-xaml/issues/2504#issuecomment-2612751024
    -->
    <ContentDialog.PrimaryButtonStyle>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="4" />
        </Style>
    </ContentDialog.PrimaryButtonStyle>
    <ContentDialog.SecondaryButtonStyle>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="4" />
        </Style>
    </ContentDialog.SecondaryButtonStyle>
    <ContentDialog.CloseButtonStyle>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="4" />
        </Style>
    </ContentDialog.CloseButtonStyle>
    <ContentDialog.Title>
        <Grid MinWidth="500" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Margin="0,4,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="12">
                <TextBlock
                    FontSize="{StaticResource FontSizeHuge}"
                    Foreground="{StaticResource SecondaryBrush}"
                    Shadow="{ThemeResource CommandBarFlyoutOverflowShadow}"
                    Text="About&#x0020;" />
                <root:CompositionShadow
                    Grid.Row="1"
                    BlurRadius="16"
                    OffsetX="0"
                    OffsetY="0"
                    ShadowOpacity="0.82"
                    Color="#C4DFFF">
                    <TextBlock
                        FontSize="{StaticResource FontSizeHuge}"
                        Foreground="{StaticResource SecondaryBrush}"
                        Shadow="{ThemeResource CommandBarFlyoutOverflowShadow}"
                        Text="{x:Bind root:App.GetCurrentNamespace()}" />
                </root:CompositionShadow>
            </StackPanel>
            <Image
                Grid.Column="1"
                Height="50"
                Margin="0,1,3,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Source="ms-appx:///Assets/Exclamation4.png" />
        </Grid>
    </ContentDialog.Title>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="20,10,20,5"
            FontSize="{StaticResource FontSizeMedium}"
            Foreground="{StaticResource PrimaryBrush}"
            Text="A sample app to test changes and enhancements to the WindowsAppSDK v1.6.x"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="1"
            Margin="20,5,20,5"
            FontSize="{StaticResource FontSizeMedium}"
            Foreground="{StaticResource PrimaryBrush}"
            Text="There are styled controls and custom reusable control samples"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="2"
            Margin="20,5,20,5"
            FontSize="{StaticResource FontSizeMedium}"
            Foreground="{StaticResource PrimaryBrush}"
            Text="Keep this app in the &quot;Unpackaged&quot; mode for testing"
            TextWrapping="Wrap" />
        <StackPanel
            Grid.Row="3"
            Margin="20,5,20,5"
            Orientation="Vertical"
            Spacing="4">
            <TextBlock
                FontSize="{StaticResource FontSizeMedium}"
                Foreground="{StaticResource SecondaryBrush}"
                Text="Detected Runtime Assembly:" />
            <ScrollViewer Height="40">
                <TextBlock
                    FontSize="{StaticResource FontSizeMedium}"
                    Foreground="{StaticResource TertiaryBrush}"
                    Text="{x:Bind root:App.GetAppRuntime(), Mode=OneWay}" />
            </ScrollViewer>
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Margin="20,20,20,5"
            Orientation="Horizontal"
            Spacing="4">
            <Image
                Width="40"
                Height="40"
                Margin="0,1,8,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.9"
                Source="ms-appx:///Assets/Spinner3.png"
                Visibility="Visible">
                <Image.Resources>
                    <Storyboard
                        x:Name="StoryboardSpin"
                        AutoReverse="False"
                        RepeatBehavior="Forever">
                        <DoubleAnimation
                            x:Name="dblAnimation"
                            Storyboard.TargetName="spinnerTransform"
                            Storyboard.TargetProperty="Angle"
                            From="0"
                            To="360"
                            Duration="0:00:01.25">
                            <!--
                            <DoubleAnimation.EasingFunction>
                                <SineEase EasingMode="EaseInOut" />
                            </DoubleAnimation.EasingFunction>
                            -->
                        </DoubleAnimation>
                    </Storyboard>
                </Image.Resources>
                <Image.RenderTransform>
                    <RotateTransform x:Name="spinnerTransform" CenterX="20" CenterY="20" />
                </Image.RenderTransform>
            </Image>
            <TextBlock
                VerticalAlignment="Center"
                FontSize="{StaticResource FontSizeMedium}"
                Foreground="{StaticResource SecondaryBrush}"
                Text="Application version"
                TextWrapping="NoWrap" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="{StaticResource FontSizeMedium}"
                Foreground="{StaticResource SecondaryBrush}"
                Text="{x:Bind root:App.GetCurrentAssemblyVersion()}"
                TextWrapping="NoWrap" />
        </StackPanel>
    </Grid>
</ContentDialog>
