                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        BorderBrush="{ThemeResource GradientSplitterBrush}"
                        FontSize="{StaticResource FontSizeMedium}">
                        <local:GroupBox.Heading>
